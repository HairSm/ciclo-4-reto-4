                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="151dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="308dp"
                        android:layout_height="29dp"
                        android:fontFamily="cursive"
                        android:text="Acerca de nuestra empresa"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="358dp"
                        android:layout_height="90dp"
                        android:text="Somos una empresa dedicada a ofrecer experiencias únicas en tus celebraciones empresariales y/o personales, te ofrecemos toda una gama de productos para que tus expectativas sean superadas a través de nuestros servicios "
